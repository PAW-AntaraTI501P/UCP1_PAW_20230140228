<div class="container mt-5">
  <h1 class="mb-4">Daftar Buku</h1>

  <form action="/buku-list/add" method="POST" class="row g-3 mb-4">
    <div class="col-md-5">
      <input type="text" class="form-control" name="nama" placeholder="Judul buku" required>
    </div>
    <div class="col-md-5">
      <input type="text" class="form-control" name="penerbit" placeholder="Penerbit">
    </div>
    <div class="col-md-2 d-grid">
      <button type="submit" class="btn btn-success">Tambah</button>
    </div>
  </form>

  <table class="table table-bordered table-striped">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Nama</th>
        <th>Penerbit</th>
        <th>Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% if (books.length === 0) { %>
        <tr>
          <td colspan="4" class="text-center">Belum ada data buku</td>
        </tr>
      <% } %>
      <% books.forEach((book) => { %>
        <tr>
          <td><%= book.id %></td>
          <td><%= book.nama %></td>
          <td><%= book.penerbit %></td>
          <td>
            <form action="/buku-list/edit/<%= book.id %>?_method=PUT" method="POST" class="d-inline">
              <input type="text" name="nama" value="<%= book.nama %>" required>
              <input type="text" name="penerbit" value="<%= book.penerbit %>">
              <button type="submit" class="btn btn-warning btn-sm">Edit</button>
            </form>

            <form action="/buku-list/delete/<%= book.id %>?_method=DELETE" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger btn-sm">Hapus</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <div class="mt-4">
    <a href="/" class="btn btn-secondary">Kembali ke Home</a>
  </div>
</div>
